<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="mindbaz.webservice.abstract" class="mbzSoapClient" abstract="true" public="false">
            <argument>%mindbaz.credentials%</argument>
        </service>

        <service id="mindbaz.webservice.subscriber" class="mbzSubscriber\SubscriberWebService" parent="mindbaz.webservice.abstract" public="false" />

        <service id="mindbaz.webservice.oneshot" class="mbzOneshot\OneshotWebService" parent="mindbaz.webservice.abstract" public="false" />

        <service id="mindbaz.serializer" class="MindbazBundle\Serializer\Bridge\Serializer" public="false">
            <argument type="service" id="serializer" />
        </service>

        <service id="mindbaz.jms_serializer.deserialization_visitor.mindbaz" class="MindbazBundle\Serializer\Bridge\Visitor\MindbazDeserializationVisitor" public="false">
            <argument type="service" id="jms_serializer.naming_strategy" />
            <tag name="jms_serializer.deserialization_visitor" format="mindbaz" />
        </service>

        <service id="mindbaz.jms_serializer.serialization_visitor.mindbaz" class="MindbazBundle\Serializer\Bridge\Visitor\MindbazSerializationVisitor" public="false">
            <argument type="service" id="jms_serializer.naming_strategy" />
            <tag name="jms_serializer.serialization_visitor" format="mindbaz" />
        </service>

        <service id="mindbaz.serializer.encoder.subscriber" class="MindbazBundle\Serializer\SubscriberEncoder" public="false">
            <tag name="serializer.encoder" />
        </service>

        <service id="mindbaz.serializer.normalizer.subscriber" class="MindbazBundle\Serializer\SubscriberNormalizer" public="false">
            <tag name="serializer.normalizer" />
        </service>

        <service id="mindbaz.manager.subscriber" class="MindbazBundle\Manager\SubscriberManager">
            <argument type="service" id="mindbaz.webservice.subscriber"/>
            <argument type="service" id="mindbaz.webservice.oneshot"/>
            <argument type="service" id="mindbaz.serializer"/>
            <argument type="service" id="logger" on-invalid="null" />
        </service>

        <service id="swiftmailer.mailer.mindbaz.transport.eventdispatcher" parent="swiftmailer.transport.eventdispatcher.abstract" public="false" />

        <service id="swiftmailer.mailer.transport.mindbaz" class="MindbazBundle\SwiftMailer\MindbazTransport" public="false">
            <argument type="service" id="mindbaz.manager.subscriber"/>
            <argument type="service" id="swiftmailer.mailer.mindbaz.transport.eventdispatcher"/>
            <argument>%mindbaz.campaigns%</argument>
            <argument>%mindbaz.insertMissingSubscribers%</argument>
        </service>
    </services>
</container>
